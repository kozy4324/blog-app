<div class="max-w-4xl mx-auto">
  <!-- Header Section -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">新しい記事を作成</h1>
    <p class="text-lg text-gray-600 mb-6">記事のタイトルと内容を入力して、新しいブログ記事を作成しましょう。</p>
  </div>

  <!-- Form Container -->
  <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
    <%= form_with model: @article, local: true, class: "space-y-6" do |form| %>
      <!-- Title Field -->
      <div class="space-y-2">
        <%= form.label :title, "タイトル", class: "block text-sm font-medium text-gray-700" %>

        <%= form.text_field :title, 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 text-lg",
            placeholder: "記事のタイトルを入力してください" %>
      </div>

      <!-- Body Field -->
      <div class="space-y-2">
        <%= form.label :body, "内容", class: "block text-sm font-medium text-gray-700" %>

        <%= form.text_area :body, 
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 resize-vertical",
            placeholder: "記事の内容を入力してください",
            rows: 12 %>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-between pt-6 border-t border-gray-200">
        <%= link_to articles_path, class: "inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-all duration-200" do %>
          <svg
            class="w-5 h-5 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"
            ></path>
          </svg>
          戻る
        <% end %>

        <%= form.submit "記事を作成", class: "inline-flex items-center px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transition-all duration-200" %>
      </div>
    <% end %>
  </div>
</div>
