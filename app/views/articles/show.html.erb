<div class="max-w-4xl mx-auto">
  <!-- Article Content -->
  <article class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
    <!-- Article Header -->
    <div class="px-8 py-6 border-b border-gray-200">
      <h1 class="text-4xl font-bold text-gray-900 mb-4 leading-tight">
        <%= @article.title %>
      </h1>
      
      <!-- Meta Information -->
      <div class="flex items-center justify-between text-sm text-gray-500">
        <time datetime="<%= @article.created_at.iso8601 %>" class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= @article.created_at.strftime("%Y年%m月%d日") %>
        </time>
        
        <% if @article.updated_at != @article.created_at %>
          <span class="text-gray-400">
            最終更新: <%= @article.updated_at.strftime("%Y年%m月%d日") %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Article Body -->
    <div class="px-8 py-8">
      <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
        <%= simple_format(@article.body, class: "whitespace-pre-wrap") %>
      </div>
    </div>
  </article>

  <!-- Action Buttons -->
  <div class="flex items-center justify-between mt-8">
    <%= link_to articles_path, class: "inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-all duration-200" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      一覧に戻る
    <% end %>

    <div class="flex items-center space-x-4">
      <%= link_to edit_article_path(@article), class: "inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
        編集
      <% end %>

      <%= link_to @article, method: :delete, 
          confirm: "本当にこの記事を削除しますか？", 
          class: "inline-flex items-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg shadow-md hover:shadow-lg transition-all duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
        削除
      <% end %>
    </div>
  </div>
</div>
